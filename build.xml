<?xml version="1.0" encoding="UTF-8"?>
<project name="mmreg4j" default="init">

	<property file="build.properties" />
	<property name="project.name" value="${ant.project.name}" />

	<property name="src.java.dir" value="src" />
	<property name="src.test.dir" value="test" />
	<property name="src.example.dir" value="example" />
	<property name="build.dir" value="build" />
	<property name="build.java.dir" value="build/classes/java" />
	<property name="build.test.dir" value="build/classes/test" />
	<property name="build.example.dir" value="build/classes/example" />
	<property name="build.classes.dir" value="build/classes" />
	<property name="extlib.dir" value="lib" />
	<!-- 定义类路径 -->
	<path id="project.classpath">
		<fileset dir="${extlib.dir}">
			<include name="*.jar" />
		</fileset>
		<pathelement location="${build.java.dir}" />
		<pathelement location="${build.test.dir}" />
		<pathelement location="${build.example.dir}" />
	</path>


	<target name="init">
		<mkdir dir="${build.java.dir}" />
		<mkdir dir="${build.test.dir}" />
		<mkdir dir="${build.example.dir}" />
	</target>

	<target name="compile.java" depends="init">
		<javac destdir="${build.java.dir}" encoding="UTF-8" source="1.5" target="1.5">
			<src path="${src.java.dir}" />
			<classpath refid="project.classpath" />
		</javac>
	</target>
	
	<target name="compile.example" depends="compile.java">
		<javac destdir="${build.example.dir}" encoding="UTF-8" source="1.5" target="1.5">
			<src path="${src.example.dir}" />
			<classpath refid="project.classpath" />
		</javac>
	</target>
	
	<target name="compile.test" depends="compile.example">
		<javac destdir="${build.test.dir}" encoding="UTF-8" source="1.5" target="1.5">
			<src path="${src.test.dir}" />
			<classpath refid="project.classpath" />
			<classpath>
				<fileset dir="${junit.lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="compile" depends="compile.java,compile.test">
	</target>

	<target name="build.java" depends="compile.java">
		<copy todir="${build.java.dir}" preservelastmodified="true">
			<fileset dir="${src.java.dir}">
				<include name="**/*.*" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="build.test" depends="compile.test">

	</target>
	<target name="build" depends="build.java,build.test" />

	<target name="jar" depends="build.java">
		<jar destfile="${build.dir}/${project.name}-${version}.jar" basedir="${build.java.dir}" />
	</target>

	<target name="clean">
		<delete includeEmptyDirs="true">
			<fileset dir="${build.classes.dir}">
				<include name="**/*.class" />
			</fileset>
		</delete>
	</target>
</project>
